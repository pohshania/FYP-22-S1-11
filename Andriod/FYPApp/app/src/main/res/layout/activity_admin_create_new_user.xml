<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCreateNewUserActivity">

    <TextView
        android:id="@+id/createUser_title"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:text="This page is for Admins to create a new user account."
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/createUser_fullname"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginTop="36dp"
        android:background="#e6f0ff"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#33691E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createUser_title"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/createUser_title"
        app:layout_constraintTop_toBottomOf="@+id/createUser_title" />

    <EditText
        android:id="@+id/createUser_organisationID"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="#e6f0ff"
        android:ems="10"
        android:hint="Organisation ID"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#33691E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createUser_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createUser_email"
        app:layout_constraintTop_toBottomOf="@+id/createUser_email" />

    <EditText
        android:id="@+id/createUser_password"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="#e6f0ff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#33691E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createUser_organisationID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createUser_organisationID"
        app:layout_constraintTop_toBottomOf="@+id/createUser_organisationID" />

    <EditText
        android:id="@+id/createUser_email"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="#e6f0ff"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#33691E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/createUser_fullname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/createUser_fullname"
        app:layout_constraintTop_toBottomOf="@+id/createUser_fullname" />

    <Button
        android:id="@+id/createUser_createAcc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="@+id/createUser_password"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="@+id/createUser_password"
        app:layout_constraintTop_toBottomOf="@+id/createUser_password" />

    <ProgressBar
        android:id="@+id/createUser_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />


</androidx.constraintlayout.widget.ConstraintLayout>