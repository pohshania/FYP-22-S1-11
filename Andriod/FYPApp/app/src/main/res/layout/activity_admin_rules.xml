<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminRulesActivity">


<!-- ============================== TITLE ============================== -->
        <TextView
            android:id="@+id/adminRules_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Rules"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:background="#D79334"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/adminRules_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter values below to change the detection rules"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adminRules_title"
                app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/adminRules_separator"
            android:layout_width="422dp"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adminRules_description"
            android:layout_marginTop="10dp"/>

<!-- ============================== CPU ============================== -->
        <TextView
            android:id="@+id/cpuLabel"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:text="CPU usage (%)"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/cpumaxText"
            app:layout_constraintEnd_toStartOf="@+id/cpumaxText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cpumaxText"/>

        <EditText
            android:id="@+id/cpumaxText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Leave blank to disable"
            android:inputType="numberSigned|numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminRules_separator" />

<!-- ============================== NET RECV ============================== -->
        <TextView
            android:id="@+id/netrecvLabel"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:text="Network receive (MB)"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/netrecvText"
            app:layout_constraintEnd_toStartOf="@+id/netrecvText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/netrecvText"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/netrecvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Leave blank to disable"
            android:inputType="numberSigned|numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpumaxText" />

<!-- ============================== NET SEND ============================== -->
        <TextView
            android:id="@+id/netsendLabel"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:text="Network send (MB)"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/netsendText"
            app:layout_constraintEnd_toStartOf="@+id/netsendText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/netsendText"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/netsendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Leave blank to disable"
            android:inputType="numberSigned|numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/netrecvText" />


<!-- ============================== DISK WRITE ============================== -->
        <TextView
            android:id="@+id/diskwritLabel"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:text="Disk write (MB)"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/diskwritText"
            app:layout_constraintEnd_toStartOf="@+id/diskwritText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diskwritText"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/diskwritText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Leave blank to disable"
            android:inputType="numberSigned|numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/netsendText" />

<!-- ============================== DISK READ ============================== -->
        <TextView
            android:id="@+id/diskreadLabel"
            android:layout_width="114dp"
            android:layout_height="54dp"
            android:text="Disk read (MB)"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/diskreadText"
            app:layout_constraintEnd_toStartOf="@+id/diskreadText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/diskreadText"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/diskreadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:hint="Leave blank to disable"
            android:inputType="numberSigned|numberDecimal"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diskwritText" />


<!-- ============================== SUBMIT ============================== -->
        <Button
            android:id="@+id/adminRules_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:text="Save Change"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diskreadLabel"
            android:layout_marginTop="30dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>