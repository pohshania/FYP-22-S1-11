<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsActivity">

    <View
        android:id="@+id/user_settings_separator"
        android:layout_width="422dp"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rulesButton" />

    <TextView
        android:id="@+id/feedback_tv"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="left|center"
        android:text="Send feedback to the developer team below!"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_settings_separator" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#A9A9A9"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:text="CreepingDonut@gmail.com"
        android:textColor="#333333"
        app:layout_constraintEnd_toEndOf="@+id/rules_et"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rules_et"
        app:layout_constraintTop_toBottomOf="@+id/feedback_tv" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rules_et"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rules_et"
        app:layout_constraintVertical_bias="0.104" />

    <EditText
        android:id="@+id/subject_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#DEDEDE"
        android:ems="10"
        android:hint="Enter subject"
        android:inputType="textMultiLine"
        android:paddingHorizontal="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/email_et"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="@+id/email_et"
        app:layout_constraintTop_toBottomOf="@+id/email_et" />

    <EditText
        android:id="@+id/rules_et"
        android:layout_width="333dp"
        android:layout_height="221dp"
        android:layout_marginTop="16dp"
        android:background="#DEDEDE"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Feedback Here..."
        android:inputType="textMultiLine"
        android:paddingHorizontal="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_et"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rulesButton"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Click here to view rules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>