<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsRulesActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <TextView
        android:id="@+id/rule1_tv"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:text="Rule 1"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <TextView
        android:id="@+id/rule2_tv"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Rule 2"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rule1_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rule1_tv"
        app:layout_constraintTop_toBottomOf="@+id/rule1_tv" />

    <TextView
        android:id="@+id/rule3_tv"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Rule 3"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rule2_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rule2_tv"
        app:layout_constraintTop_toBottomOf="@+id/rule2_tv" />

    <TextView
        android:id="@+id/rule4_tv"
        android:layout_width="116dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Rule 4"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rule3_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rule3_tv"
        app:layout_constraintTop_toBottomOf="@+id/rule3_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>