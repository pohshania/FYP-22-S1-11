<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAlertEngineDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

<!-- ==============================  TITLE ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D79334"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>



    <View
        android:id="@+id/userAlertEngineDetails_separator_1"
        android:layout_width="416dp"
        android:layout_height="10dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_Title" />


<!-- ============================== DATE ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textColor="#000080"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_separator_1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>

    <!-- ============================== ABNORMAL ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_abnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abnormal(s) Found: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_date"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>

<!-- ==============================  DETECTED BY ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_detectedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detected By: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_abnormal"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>


<!-- ==============================  EVENT STATUS ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_eventStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Status: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_detectedBy"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"/>


    <View
        android:id="@+id/user_notification_separator_2"
        android:layout_width="416dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_eventStatus" />


<!-- ==============================  DISK ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_diskRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disk Read: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_notification_separator_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


    <TextView
        android:id="@+id/userAlertEngineDetails_diskWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disk Write: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_diskRead"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>



<!-- ==============================  IDLING ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_idling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idling: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_diskWrite"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


    <TextView
        android:id="@+id/userAlertEngineDetails_idling_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Avg: "
        android:textColor="#000080"
        app:layout_constraintBottom_toBottomOf="@+id/userAlertEngineDetails_idling"
        app:layout_constraintStart_toEndOf="@+id/userAlertEngineDetails_idling"
        app:layout_constraintTop_toTopOf="@+id/userAlertEngineDetails_idling" />

    <TextView
        android:id="@+id/userAlertEngineDetails_idling_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Max: "
        android:textColor="#000080"
        app:layout_constraintBottom_toBottomOf="@+id/userAlertEngineDetails_idling_avg"
        app:layout_constraintStart_toEndOf="@+id/userAlertEngineDetails_idling_avg"
        app:layout_constraintTop_toTopOf="@+id/userAlertEngineDetails_idling_avg" />

    <TextView
        android:id="@+id/userAlertEngineDetails_idling_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Min: "
        android:textColor="#000080"
        app:layout_constraintBottom_toBottomOf="@+id/userAlertEngineDetails_idling_max"
        app:layout_constraintStart_toEndOf="@+id/userAlertEngineDetails_idling_max"
        app:layout_constraintTop_toTopOf="@+id/userAlertEngineDetails_idling_max" />

    <TextView
        android:id="@+id/userAlertEngineDetails_CPU_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Usage: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_idling"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


<!-- ==============================  NETWORK ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_netRecv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Receive: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_CPU_usage"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/userAlertEngineDetails_netSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Send: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_netRecv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


<!-- ==============================  SYS ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_netSend"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


    <TextView
        android:id="@+id/userAlertEngineDetails_sys_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_avg"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_sys"/>

    <TextView
        android:id="@+id/userAlertEngineDetails_sys_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_max"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_sys"/>


    <TextView
        android:id="@+id/userAlertEngineDetails_sys_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_min"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_sys_avg"/>



<!-- ==============================  USR ============================== -->
    <TextView
        android:id="@+id/userAlertEngineDetails_usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_sys"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"/>


    <TextView
        android:id="@+id/userAlertEngineDetails_usr_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_avg"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_usr"/>

    <TextView
        android:id="@+id/userAlertEngineDetails_usr_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_max"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_usr"/>



    <TextView
        android:id="@+id/userAlertEngineDetails_usr_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="@id/userAlertEngineDetails_idling_min"
        app:layout_constraintTop_toTopOf="@id/userAlertEngineDetails_usr"/>




<!-- ==============================  DOWNLOAD ============================== -->
    <Button
        android:id="@+id/userAlertEngineDetails_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAlertEngineDetails_usr" />

</androidx.constraintlayout.widget.ConstraintLayout>