<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAnalysisEngineDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

<!-- ============================== TITLE ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="#D79334"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/userAnalysisEngineDetails_separator_1"
        android:layout_width="416dp"
        android:layout_height="13dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAnalysisEngineDetails_Title" />


<!-- ============================== ANOMALY ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_anomaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Anomaly: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAnalysisEngineDetails_separator_1" />

<!-- ============================== DATE ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Date: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAnalysisEngineDetails_anomaly" />

<!-- ============================== DETECTED RANGE ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_detection_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Detection Range: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAnalysisEngineDetails_date" />




<!-- ============================== DETECTION TYPE ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_detection_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Detection Type: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAnalysisEngineDetails_detection_range" />

<!-- ============================== EVENT STATUS ============================== -->
    <TextView
        android:id="@+id/userAnalysisEngineDetails_event_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:text="Event Status: "
        android:textColor="#000080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAnalysisEngineDetails_detection_type" />


<!-- ============================== DOWNLOAD ============================== -->
    <Button
        android:id="@+id/userAnalysisEngineDetails_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAnalysisEngineDetails_event_status" />

    <Button
        android:id="@+id/correctButton"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        android:text="Correct"
        app:layout_constraintBottom_toTopOf="@+id/userAnalysisEngineDetails_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAnalysisEngineDetails_event_status"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ignoreButton"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginEnd="56dp"
        android:text="Ignore"
        app:layout_constraintBottom_toBottomOf="@+id/correctButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/correctButton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>