<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userLogs_bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/userLogs_filterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter date and time"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="15dp" />

        <Button
            android:id="@+id/userLogs_applyFilter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:layout_marginStart="120dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/userLogs_filterPickDate_btn"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="Pick Date" />

        <TextView
            android:id="@+id/userLogs_filterDate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/userLogs_filterStartTime_btn"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="Start Time " />

        <TextView
            android:id="@+id/userLogs_filterStartTime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Button
            android:id="@+id/userLogs_filterEndTime_btn"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:text="End Time " />

        <TextView
            android:id="@+id/userLogs_filterEndTime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:id="@+id/userLogs_filterSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="summary"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>







</LinearLayout>